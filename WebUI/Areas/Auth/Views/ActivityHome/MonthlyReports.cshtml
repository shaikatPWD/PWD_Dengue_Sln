<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<link href="~/Content/layout-modifications.css" rel="stylesheet" />
<script src="~/Areas/Auth/Scripts/Activity/AllPeriodList.js"></script>
<style type="text/css">
    .tdStyle {
        font-size: 14px !important;
        color: green !important;
        text-align: left;
    }

    .thStyle {
        font-size: 14px !important;
        color: #1D5987 !important;
    }
</style>
@{
    ViewBag.Title = "PerodList";
    Layout = "~/Views/Shared/_LayoutContentPage.cshtml";
}
<div id="mmInfoEntry">
    <section class="rm">
        <div class="container-fluid ">
            <fieldset>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="table-header">
                                    Dengue Protection Monitoring System
                                </div>
                                <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">


                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" frame="box">
                                        <thead>
                                            <tr>
                                                <td class="thStyle">Office Name</td>
                                                <th class="thStyle">Period</th>
                                                <th class="thStyle">Details</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind="foreach:PeriodList">
                                            <tr>
                                                <td class="tdStyle" data-bind=" text:OfficeName"></td>
                                                <td class="tdStyle" data-bind=" text:Period"></td>
                                                <td>
                                                    @*?period=' + $data.Period*@
                                                    <a data-bind="attr: {href: '@Url.Action("MonthlyReportDetails", "ActivityHome")?period=' + $data.Period}" class="btn btn-xs btn-warning">
                                                        Details
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </section>

</div>

