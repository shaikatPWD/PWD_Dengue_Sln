
@{
    ViewBag.Title = "ActivitiesDetailsEntry";
    Layout = "~/Views/Shared/_LayoutContentPage.cshtml";
}
<link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script src="~/Scripts/KoCustomDateTimePicker.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/knockout-date-bindings.js"></script>
<link href="~/Content/layout-modifications.css" rel="stylesheet" />
<script src="~/Areas/Auth/Scripts/Activity/ActivitiesDetailsEntry.js"></script>

<script type="text/javascript">

    

</script>

<div id="activityDetails">
    <section class="rm">
        <div class="container-fluid ">
            <fieldset>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="table-header">
                                    Dengue Protection Monitoring System
                                </div>
                                <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">


                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" frame="box">
                                        <thead>
                                            <tr>
                                                <th style="font-weight:bolder">Name of Structure</th>
                                                <th>Date</th>
                                                <th>পুকুর/জলাশয়/লেক/খাল কচুরীপানা মুক্ত ও পরিষ্কার করা</th>
                                                <th>খোলা যায়গার নর্দমা, ডাস্টবিনের বর্জ্য অপসারণ</th>
                                                <th>খোলা ড্রেইন পরিষ্কার করণ</th>
                                                <th>ঝোপ-ঝাড় ও আগাছা পরিষ্কারকরণ</th>
                                                <th>গাছপালা ঝোপঝাড়ে fogging করা</th>
                                                <th>খোলা ড্রেইনে লার্ভা ধ্বংসকারী ওষধ নিয়মিতভাবে ছিটানো</th>
                                                <th>আবদ্ধ পানি অপসারণ</th>
                                            </tr>
                                        </thead>
                                        <tbody data-bind="foreach:ActivityDetails">
                                            <tr>
                                                <td style="display:none"><input type="hidden" data-bind="value:Id" /></td>
                                                <td style="text-align:left;" data-bind="text:AssetName"></td>
                                                <td style="text-align:left;">
                                                    <input type="text" class="form-control date-picker" id="date" data-bind="datepicker:Date, datepickerOptions: {format: 'DD/MM/YYYY'}, valueUpdate:'keyup'">
                                                    <span class="input-group-addon">
                                                        <i class="fa fa-calendar bigger-110"></i>
                                                    </span>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsPondsCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsPondsCleanUp "></select>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsWastageCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsWastageCleanUp "></select>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsMedicalCollegeCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsMedicalCollegeCleanUp "></select>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsOfficeAndHouseholdCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsOfficeAndHouseholdCleanUp "></select>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsStillWaterCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsStillWaterCleanUp "></select>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsCuringWaterCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsCuringWaterCleanUp "></select>
                                                </td>
                                                <td style="text-align:left;">
                                                    <select class="form-control" id="form-field-select-1" data-bind="options:IsUnderConstructionBuildingCleanUpList,optionsValue: 'Id',optionsText:'Name', value:IsUnderConstructionBuildingCleanUp "></select>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>




                                <div class="space-6"></div>

                                <div class="clearfix form-actions">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="submit" data-togle="modal" data-target="#successModal" data-bind="click:Submit" class="btn btn-info">
                                            <i class="ace-icon fa fa-check bigger-110"></i>
                                            Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </section>
    <div id="successModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Response</h4>
                </div>
                <div class="modal-body" align="center">
                    <p id="successModalText"></p>
                    <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</div>

