    .rcorners1 {
        border-radius: 25px;
        background: #73AD21;
        padding: 20px;
        width: 250px;
        height: 140px;
        margin: 10px;
        background: linear-gradient(to right, #0a504a, #38ef7d) !important;
        box-shadow: 0 0.46875rem 2.1875rem rgb(90 97 105 / 10%), 0 0.9375rem 1.40625rem rgb(90 97 105 / 10%), 0 0.25rem 0.53125rem rgb(90 97 105 / 12%), 0 0.125rem 0.1875rem rgb(90 97 105 / 10%);
        color: #fff;
        text-align: center;
    }

    .rcorners2 {
        border-radius: 25px;
        background: #73AD21;
        padding: 20px;
        width: 250px;
        height: 140px;
        margin: 10px;
        background: linear-gradient(to right, #493240, #f09) !important;
        box-shadow: 0 0.46875rem 2.1875rem rgb(90 97 105 / 10%), 0 0.9375rem 1.40625rem rgb(90 97 105 / 10%), 0 0.25rem 0.53125rem rgb(90 97 105 / 12%), 0 0.125rem 0.1875rem rgb(90 97 105 / 10%);
        color: #fff;
        text-align: center;
    }
</style>
<div id="InfoDtlVW">
    <section class="rm">
        <div class="container-fluid ">
            <div class="row">
                @*<div class="space-6"></div>*@
                <div class="col-xs-12">
                    <div class="col-xs-4 rcorners1">
                        <h6> New Observation </h6> <br>
                        <h5><span data-bind="text: pendingObs"></span></h5>
                    </div>
                    <div class="col-xs-4 rcorners2">
                        <h6> In Progress Observations </h6> <br>
                        <h5><span data-bind="text: inProgressObs"></span></h5>
                    </div>
                    <div class="col-xs-4 rcorners1">
                        <h6> Completed Observations </h6> <br>
                        <h5><span data-bind="text: completedObs"></span></h5>
                    </div>

                </div>

            </div>
            <div class="space-6"></div>
            @using (Ajax.BeginForm("Dashboard", "Information", null))
            {
                <fieldset>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="table-header">
                                        Observation from public
                                    </div>
                                    <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline no-footer">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="input-group">
                                                    <input type="text" name="searchString" class="form-control search-query" id="searchString" placeholder="" value="@ViewBag.SearchString">
                                                    <span class="input-group-btn">
                                                        <button type="submit" class="btn btn-purple btn-sm"><span class="ace-icon fa fa-search icon-on-right bigger-110"></span>Search</button>
                                                    </span>
                                                </div>
                                            </div>

                                        </div>
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" frame="box">
                                            <thead class="headcolor">
                                                <tr>
                                                    <th class="center" style="display:none">Id</th>
                                                    <th class="center">Name</th>
                                                    <th class="center">Mobile</th>
                                                    <th class="center">Area</th>
                                                    <th class="center">Location</th>
                                                    <th class="center">Remarks</th>
                                                    <th class="center">Status</th>
                                                    <th class="center">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody data-bind="foreach:LoadData">
                                                <tr>
                                                    <td style="display:none"><input type="hidden" data-bind="value:Id" /></td>
                                                    <td class="center" data-bind="text: FullName"></td>
                                                    <td class="center" data-bind="text: Mobile"></td>
                                                    <td class="center" data-bind="text: AreaName"></td>
                                                    <td class="center" data-bind="text: Location"></td>
                                                    <td class="center" data-bind="text: Remarks"></td>
                                                    <td class="center" data-bind="text: StatusName"></td>

                                                    <td>
                                                        <div data-bind="">
                                                            <a data-bind="attr: {href: '@Url.Action("ActionEntry", "Information")?id=' + $data.Id}" class="btn btn-xs btn-warning">
                                                                <i class="ace-icon fa fa-flag bigger-120"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div class="row">

                                            <div class="col-xs-4">
                                                <div class="dataTables_info" id="dynamic-table_info" role="status" aria-live="polite">
                                                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <div class="dataTables_info" id="dynamic-table_info" role="status" aria-live="polite">
                                                    <div style="text-align :center;">
                                                        Record @(Model.TotalItemCount < Model.Count ? 0 : Model.Count) of @Model.TotalItemCount
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-4">
                                                <div class="dataTables_paginate paging_simple_numbers" id="dynamic-table_paginate">
                                                    <ul class="pagination">
                                                        <li class="paginate_button previous disabled" aria-controls="dynamic-table" tabindex="0" id="dynamic-table_previous">

                                                            @Html.PagedListPager(Model, page => Url.Action("Dashboard",
                     new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </fieldset>
            }
            @*</form>*@

        </div>
    </section>

</div>
<div class="main-content">
    <div id="content" class="page-content">
        <iframe id="myIf" name="myIf" width="100%" height="768px" src="" frameborder="0"></iframe>
    </div>
</div>
